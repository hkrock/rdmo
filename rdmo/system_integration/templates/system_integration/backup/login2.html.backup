<h2>Login at  {{ system_name }}</h2>
<form action="{% url 'system_integration:send' %}" method="post">
  {% csrf_token %}
  <table class="table">
    <tr>
      <td><label for="id_username">Username</label></td>
      <td><input id="id_username" name="username"
           type="text" class="form-control"></td>
      </tr>
      <tr>
        <td><label for="id_password">Password</label></td>
        <td><input id="id_password" name="password"
             type="password" class="form-control"></td>
      </tr>
    </table>
    <input type="hidden" id="sys_id" name="sys_id" value="{{ sys_id }}" >
  <button type="submit">Login</button>
</form>
<a href="{% url 'system_integration:login' %}">back</a>
